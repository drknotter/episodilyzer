<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <com.drknotter.episodilyzer.view.AspectRatioImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:aspectRatio="5.414"/>

            <ImageView
                android:id="@+id/star_toggle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignRight="@id/banner"
                android:layout_below="@id/banner"
                android:src="@drawable/star_toggle"
                android:scaleType="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/white"/>

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/banner"
                android:layout_toLeftOf="@id/star_toggle"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/overview"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:ellipsize="end"
                android:maxLines="12"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="?android:attr/textColorPrimaryInverse"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>