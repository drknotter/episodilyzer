<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/show_detail_title_height"
        android:layout_gravity="center"
        android:background="@color/detail_text_background"
        android:ellipsize="marquee"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/show_detail_text_padding"
        android:textSize="@dimen/show_detail_title_text_size" />

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/show_detail_title_height"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@string/title_image_description"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/first_aired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="@dimen/show_detail_first_aired_padding"
        android:textSize="@dimen/show_detail_first_aired_text_size" />

</merge>