<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="@dimen/show_detail_margin" >

    <LinearLayout
        android:id="@+id/root_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="@dimen/show_detail_title_height"
                android:layout_height="@dimen/show_detail_title_height"
                android:layout_gravity="center" >

                <Button
                    android:id="@+id/add_show_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/minus_sign"
                    android:contentDescription="@string/add_show_content_desc" />

                <ImageView
                    android:id="@+id/anti_minus_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/anti_minus_sign"
                    android:contentDescription="@string/add_show_content_desc" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/show_detail_title_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/show_detail_margin"
                android:background="@color/detail_text_background"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/show_detail_text_padding"
                android:textSize="@dimen/show_detail_title_text_size" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>