<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="@dimen/show_detail_margin" >

    <LinearLayout
        android:id="@+id/root_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/show_detail_title_height"
            android:layout_gravity="center"
            android:background="@color/detail_text_background"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/show_detail_text_padding"
            android:textSize="@dimen/show_detail_title_text_size" />

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/show_detail_title_height"
            android:contentDescription="@string/title_image_description"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="center" />
    </LinearLayout>

</ScrollView>